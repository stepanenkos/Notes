<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="32dp"
    android:padding="16dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8x"
        android:layout_marginBottom="@dimen/margin_16x"
        android:fontFamily="@font/roboto_mono_bold"
        android:gravity="center"
        android:text="@string/fragment_signed_title_profile"
        android:textSize="@dimen/text_size_24x"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fragment_signed_text_view_you_are_logged_in_as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Вы вошли как example@google.com"
        />

    <Button
        android:id="@+id/fragment_signed_button_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_32x"
        android:layout_marginTop="@dimen/margin_8x"
        android:text="@string/action_exit"
        />

    <Button
        android:id="@+id/fragment_signed_button_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_32x"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="@string/fragment_login_button_close"
        />

</LinearLayout>